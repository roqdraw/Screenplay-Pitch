<h3>Writer Details</h3>

<h2><%= @user.name %></h2>

<p class="bio"><%= @user.bio %></p>

<% @pitches.each do |pitch| %>
    <% if pitch.user_id == @user.id%>
        <% @count += 1 %>
    <% end %>
<% end %>
<p class="number">Pitches: <%= @count %></p>


<% @pitches.select do |pitch| %>
    <% if pitch.user_id == @user.id%>
        <p><a href="/pitches/<%= pitch.id %>"><%= pitch.title %></a></p>
    <% end %>
<% end %>

<button class="email"><a class="email-link" href="mailto:<%= @user.email %>">Contact Writer.</a></button>